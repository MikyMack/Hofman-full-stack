        const editBtn = document.getElementById('editAddressBtn');
        const modalOverlay = document.getElementById('addressModalOverlay');
        const closeBtn = document.getElementById('closeModalBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        const form = document.getElementById('addressEditForm');

        // Store original values for cancel functionality
        const originalValues = {
            name: 'John Doe',
            address: 'Sopanam(H) trippanachi,Kerala',
            city: 'manjeri',
            state: 'Kerala',
            country: 'India',
            postcode: '673641',
            phone: '1234567890'
        };

        // Open modal
        editBtn.addEventListener('click', function(e) {
            e.preventDefault();
            modalOverlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        });

        // Close modal function
        function closeModal() {
            modalOverlay.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // Close modal events  
        closeBtn.addEventListener('click', closeModal);
        cancelBtn.addEventListener('click', closeModal);

        // Close modal when clicking overlay
        modalOverlay.addEventListener('click', function(e) {
            if (e.target === modalOverlay) {
                closeModal();
            }
        });

        // Reset form to original values when canceling
        cancelBtn.addEventListener('click', function() {
            document.getElementById('nameField').value = originalValues.name;
            document.getElementById('addressField').value = originalValues.address;
            document.getElementById('cityField').value = originalValues.city;
            document.getElementById('stateField').value = originalValues.state;
            document.getElementById('countryField').value = originalValues.country;
            document.getElementById('postcodeField').value = originalValues.postcode;
            document.getElementById('phoneField').value = originalValues.phone;
        });

        // Form submission
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                name: document.getElementById('nameField').value,
                address: document.getElementById('addressField').value,
                city: document.getElementById('cityField').value,
                state: document.getElementById('stateField').value,
                country: document.getElementById('countryField').value,
