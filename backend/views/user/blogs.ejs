                                                <% blog.metaKeywords.forEach(function(tag, idx) { %>
                                                    <a href="/blogs?tag=<%= encodeURIComponent(tag) %>"><%= tag %></a><%= idx < blog.metaKeywords.length - 1 ? ', ' : '' %>
                                                <% }); %>
                                            </div>
                                        <% } %>
