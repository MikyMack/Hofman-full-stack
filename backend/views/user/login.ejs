                    <script>
                        // Helper function to show toast messages using Toastify
                        function showToast(message, type) {
                            Toastify({
                                text: message,
                                duration: 3000,
                                gravity: "top",
                                position: "right",
                                backgroundColor: type === "success" ? "#4CAF50" : "#ff0000",
                            }).showToast();
                        }

                        let registrationData = {};
                        let otpCountdown;
                        async function handleLogin(event) {
                            event.preventDefault();

                            const email = document.getElementById('loginEmail').value;
                            const password = document.getElementById('loginPassword').value;

                            // Get guestCart from localStorage
                            const guestCart = JSON.parse(localStorage.getItem('guestCart')) || [];

                            try {
                                const response = await fetch('/auth/login', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({
                                        email,
                                        password,
                                        guestCart // Send guest cart to server
                                    })
                                });

                                if (!response.ok) {
                                    const error = await response.json();
                                    throw new Error(error.message || 'Login failed');
                                }

                                // Clear guest cart on successful login
                                localStorage.removeItem('guestCart');

                                showToast("Login successful!", "success");
                                window.location.href = '/';
                            } catch (err) {
                                showToast(err.message, "error");
                            }
                        }

                        function handleGoogleLogin(event) {
                            event.preventDefault();

                            const guestCart = JSON.parse(localStorage.getItem('guestCart')) || [];
                            const encodedCart = encodeURIComponent(JSON.stringify(guestCart));

                            // Save cart to server session before redirecting
                            fetch('/auth/store-guest-cart', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({ guestCart })
                            }).then(() => {
                                window.location.href = `/auth/google?guestCart=${encodedCart}`;
                            });
                        }

                        async function handleRegistration(event) {
                            event.preventDefault();

                            registrationData = {
                                name: document.getElementById('name').value,
                                email: document.getElementById('registerEmail').value,
                                password: document.getElementById('registerPassword').value
                            };

                            try {
                                // First check if email is available
                                const checkResponse = await fetch('/auth/check-email', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({ email: registrationData.email })
                                });

                                const checkResult = await checkResponse.json();
                                if (!checkResponse.ok || !checkResult.available) {
                                    throw new Error('Email already registered');
                                }

                                // Then send OTP
                                const otpResponse = await fetch('/auth/send-otp', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({ email: registrationData.email })
                                });

                                if (!otpResponse.ok) {
                                    const error = await otpResponse.json();
                                    throw new Error(error.message || 'Failed to send OTP');
                                }

                                // Replace form with OTP form
                                const signUpTab = document.getElementById('sign-up');
                                signUpTab.innerHTML = `
      <form id="otpForm" onsubmit="return verifyOtp(event)">
        <div class="form-group">
          <label>Enter OTP *</label>
          <input type="text" class="form-control" name="otp" id="registerOtp" required>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-4">
          <button type="button" class="btn btn-link" onclick="resendOtp()">Resend OTP</button>
          <span id="countdown" class="text-muted"></span>
        </div>
        <button type="submit" class="btn btn-primary">Verify & Complete Registration</button>
      </form>
    `;
                                startCountdown();
                            } catch (err) {
                                showToast(err.message, "error");
                            }
                        }

                        async function verifyOtp(event) {
                            event.preventDefault();
                            const otp = document.getElementById('registerOtp').value;

                            try {
                                // Verify OTP
                                const verifyResponse = await fetch('/auth/verify-otp', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({
                                        email: registrationData.email,
                                        otp: otp
                                    })
                                });

                                const verifyResult = await verifyResponse.json();
                                if (!verifyResponse.ok || !verifyResult.success) {
                                    throw new Error(verifyResult.message || 'OTP verification failed');
                                }

                                // Complete registration
                                const registerResponse = await fetch('/auth/register', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify(registrationData)
                                });

                                // Handle duplicate key error (MongoServerError: E11000 ...)
                                if (!registerResponse.ok) {
                                    let registerResult;
                                    try {
                                        registerResult = await registerResponse.json();
                                    } catch (e) {
                                        registerResult = {};
                                    }
                                    // Check for Mongo duplicate key error
                                    if (
                                        registerResult &&
                                        typeof registerResult.message === "string" &&
                                        registerResult.message.includes("E11000 duplicate key error")
                                    ) {
                                        showToast("Email already registered. Please use a different email.", "error");
                                    } else if (
                                        registerResult &&
                                        typeof registerResult.message === "string"
                                    ) {
                                        showToast(registerResult.message, "error");
                                    } else {
                                        showToast("Registration failed", "error");
                                    }
                                    return;
                                }

                                const registerResult = await registerResponse.json();
                                if (!registerResult.success) {
                                    // Defensive: handle error message if present
                                    if (
                                        registerResult &&
                                        typeof registerResult.message === "string" &&
                                        registerResult.message.includes("E11000 duplicate key error")
                                    ) {
                                        showToast("Email already registered. Please use a different email.", "error");
                                    } else if (
                                        registerResult &&
                                        typeof registerResult.message === "string"
                                    ) {
                                        showToast(registerResult.message, "error");
                                    } else {
                                        showToast("Registration failed", "error");
                                    }
                                    return;
                                }

                                showToast("Registration successful!", "success");
                                window.location.href = '/auth/login';
                            } catch (err) {
                                // Handle MongoServerError: E11000 duplicate key error
                                if (
                                    typeof err.message === "string" &&
                                    err.message.includes("E11000 duplicate key error")
                                ) {
                                    showToast("Email already registered. Please use a different email.", "error");
                                } else {
                                    showToast(err.message, "error");
                                }
                            }
                        }

                        async function resendOtp() {
                            clearInterval(otpCountdown);

                            try {
                                const response = await fetch('/auth/send-otp', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({ email: registrationData.email })
                                });

                                if (response.ok) {
                                    showToast("OTP resent successfully", "success");
                                    startCountdown();
                                } else {
                                    const error = await response.text();
                                    showToast(error || 'Failed to resend OTP', "error");
                                }
                            } catch (err) {
                                showToast("Failed to resend OTP", "error");
                            }
                        }

                        function startCountdown() {
                            let timeLeft = 60;
                            const countdownElement = document.getElementById('countdown');

                            countdownElement.textContent = `Resend in ${timeLeft}s`;

                            otpCountdown = setInterval(() => {
                                timeLeft--;
                                countdownElement.textContent = `Resend in ${timeLeft}s`;

                                if (timeLeft <= 0) {
                                    clearInterval(otpCountdown);
                                    countdownElement.textContent = '';
                                }
                            }, 1000);
                        }
                    </script>
                </div>
            </div>
